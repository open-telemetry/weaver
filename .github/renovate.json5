{
  $schema: 'https://docs.renovatebot.com/renovate-schema.json',
  extends: [
    'config:best-practices',
    'helpers:pinGitHubActionDigestsToSemver',
  ],
  "ignorePaths": [
    // cargo-dist manages this file, so we have to pin *its* dependency here.
    ".github/workflows/release.yml"
  ],
  packageRules: [
    {
      groupName: 'all patch versions',
      matchUpdateTypes: [
        'patch',
      ],
      schedule: [
        'before 8am every weekday',
      ],
    },
    {
      matchUpdateTypes: [
        'minor',
        'major',
      ],
      schedule: [
        'before 8am on Monday',
      ],
    },
    {
      groupName: 'rust',
      matchPackageNames: [
        '/^rust$/',
      ],
    },
    {
      matchManagers: [
        'dockerfile',
      ],
      groupName: 'docker',
    },
    {
      matchUpdateTypes: [
        'minor',
        'patch',
      ],
      matchManagers: [
        'cargo',
        'dockerfile',
        'npm',
      ],
      automerge: true,
    },
  ],
  customManagers: [
    {
      customType: "regex",
      description: "Update Cargo Dist workspace",
      managerFilePatterns: [
        "dist-workspace.toml",
        ".github/workflows/release.yml"
      ],
      matchStrings: [
        "(?<packageName>.+?)-version = \"(?<depVersion>[^\\s@]+?)\"",
        "https:\/\/github.com\/axodotdev\/(?<packageName>.+?)\/releases\/download\/v(?<depVersion>[^\\s@]+?)\/"
      ],
      datasourceTemplate: "crate",
      versioningTemplate: "semver",
      currentValueTemplate: "{{depVersion}}",
      depTypeTemplate: "workspace.dependencies",
    },
    {
      customType: "regex",
      description: "Update Cargo Dist Actions",
      managerFilePatterns: [
        "dist-workspace.toml",
      ],
      matchStrings: [
        "\"(?<packageName>.+\/?)\" = \"(?<currentDigest>[^\s@]+?)\" # v(?<depVersion>[^\s@]+?)\n"
      ],
      datasourceTemplate: "github-tags",
      versioningTemplate: "docker",
      currentValueTemplate: "{{depVersion}}",
      depTypeTemplate: "action",
    },
  ],
  labels: [
    'dependencies',
  ],
}
